<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.wagleSub.AddBJMActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/bjm_head"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/white_rounded_background"
            android:hint="서문을 입력하세요"
            android:gravity="center" />

        <EditText
            android:id="@+id/bjm_question"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_rounded_background"
            android:hint="질문1"
            android:gravity="center" />


<!--        //디자인의 수정이 필요함... 그림자를 주고싶다...-->

        <Button
            android:id="@+id/bt_bjmAdd"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_add_circle_24"
            />

    </LinearLayout>


</ScrollView>