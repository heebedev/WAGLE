<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.wagleSub.AddWagleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="정규 와글의 제목을 입력해주세요."
            android:textColorHint="#5A5A5A"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@null" />


        // 진행 기간  -> 선택은 달력으로 할 수 있게
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 진행 기간"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tintgrey_background"
            />

        // 모집 기간  -> 선택은 달력으로 할 수 있게
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. 모집 기간"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tintgrey_background"
            />

        // 3. 위치 -> 카카오 API로 검색할 수 있게.. (쓰기 or 검색)
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. 위치"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tintgrey_background"
            />


        //4. 참가비
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. 참가비"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tintgrey_background"
            />


        //5. 세부내용

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. 세부 내용"
                android:textColor="#5A5A5A"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도서 정보 등록하기"
                android:textColor="#5A5A5A"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="150dp"
                />

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tintgrey_background"
            />


        //6. 동의 및 환불 규정
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. 동의 및 환불 규정"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tintgrey_background"
            />

    </LinearLayout>

</ScrollView>