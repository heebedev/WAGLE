<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.wagleSub.AddWagleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_addwagle_wagleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="정규 와글의 제목을 입력해주세요."
            android:textColorHint="#5A5A5A"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@null"
            />


        // 진행 기간  -> 선택은 달력으로 할 수 있게
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 진행 기간"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tintgrey_background"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_addwagle_wagleStartDate"
                android:layout_width="0px"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:text="시작 일자"
                />

            <EditText
                android:id="@+id/et_addwagle_wagleEndDate"
                android:layout_width="0px"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:text="종료 일자"
                />


        </LinearLayout>




        // 모집 기간  -> 선택은 달력으로 할 수 있게

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. 모집 기간"
                    android:textColor="#5A5A5A"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/et_addwagle_wagleDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/tintgrey_background"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="등록 마감" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. 위치"
                    android:textColor="#5A5A5A"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/et_addwagle_waglePlace"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/tintgrey_background"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="장소 등록" />

            </LinearLayout>


        </LinearLayout>


        //4. 참가비
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. 참가비"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:background="@drawable/tintgrey_background"
            />


        //5. 세부내용

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. 세부 내용"
                android:textColor="#5A5A5A"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_addwagle_wagleAddBookInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도서 정보 등록하기"
                android:textColor="#5A5A5A"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="150dp"
                />

        </LinearLayout>


        <EditText
            android:id="@+id/et_addwagle_wagleDetail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tintgrey_background"
            />


        //6. 동의 및 환불 규정
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. 동의 및 환불 규정"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/et_addwagle_wagleAgreeRefund"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tintgrey_background"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_addwagle_wagleRegister"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="등록하기"
        android:textColor="#5A5A5A"
        android:textSize="16dp"/>





</ScrollView>