<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".jhj.Jhj_Post_Write_Notice">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_write_Text_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="공지사항"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/post_write_Edit_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/jhj_post_write_edit_loundary"
                android:hint="공지사항 제목을 입력하세요"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#3A3A3A"
                android:textColorHint="#3A3A3A"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/post_write_Edit_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/jhj_post_write_edit_loundary"
                android:gravity="top"
                android:hint="내용을 입력하세요."
                android:inputType="textMultiLine"
                android:lines="13"
                android:maxLines="13"
                android:padding="10dp"
                android:textColor="#3A3A3A"
                android:textColorHint="#3A3A3A"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/post_write_Btn_Cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/post_write_Btn_Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="확인"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>