<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".jhj.Jhj_Post_Write_Notice">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_write_Text_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="공지사항"
                android:textSize="16dp"
                android:textStyle="bold" />


                <EditText
                    android:id="@+id/post_write_Edit_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/jhj_post_write_edit_loundary"
                    android:hint="공지사항 제목을 입력하세요"
                    android:singleLine="true"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#603A3A3A"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            <EditText
                android:id="@+id/post_write_Edit_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/jhj_post_write_edit_loundary"
                android:gravity="top"
                android:hint="내용을 입력하세요."
                android:inputType="textMultiLine"
                android:lines="13"
                android:maxLines="13"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:textColor="#3A3A3A"
                android:textColorHint="#603A3A3A"
                android:textSize="17dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/post_Write_Linear_NW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    >

                    <TextView
                        android:id="@+id/post_write_Btn_Cancle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="취소"
                        android:textColor="@color/mainColor"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/post_write_Btn_Submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainColor"
                        android:text="확인"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="80dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/post_Write_Linear_NR"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:visibility="invisible"
                    >

                    <TextView
                        android:id="@+id/post_write_Btn_Close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="닫기"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="50dp"
                        />

                </LinearLayout>

            </FrameLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>