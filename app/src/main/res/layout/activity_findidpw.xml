<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.FindIdPwActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_findidpw_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="메일아이디(비밀번호 찾기 필수입력)"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_findidpw_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="이름"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_findidpw_birth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="생년월일(YYMMDD)"
            android:maxLength="6"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tv_findidpw_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="16dp"
        android:textColor="@color/subColor"
        android:visibility="gone"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvbt_findid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID찾기"
            android:layout_gravity="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvbt_findpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="비밀번호 찾기"
            android:layout_gravity="center"
            android:textSize="20dp" />


    </LinearLayout>



        <Button
            android:id="@+id/bt_findidpw_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="뒤로가기"
            />






</LinearLayout>