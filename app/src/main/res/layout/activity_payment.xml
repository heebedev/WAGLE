<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/payment_ll_paymentActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rounded_background"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[ 비용 정산 ]"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="TOTAL"
                    android:textSize="14dp"
                    android:textColor="@color/subColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/payment_tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0,000 원"
                    android:textSize="14dp"
                    android:textColor="@color/subColor"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:paddingRight="10dp"
                    android:text="1인당"
                    android:textSize="14dp"
                    android:textColor="@color/mainColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/payment_tv_PricePerPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0,000 원"
                    android:textSize="14dp"
                    android:textColor="@color/mainColor"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/payment_lv_itemlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="0px"
                android:divider="#ffffff"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/payment_btn_addItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_add_24" />

        </FrameLayout>


    </LinearLayout>



</LinearLayout>