<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewDetailWagleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/vdw_cs_et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:background="@null"
            android:gravity="center"
            android:hint="와글 이름"
            android:singleLine="true"
            android:textColorHint="#605A5A5A"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="1. 진행 기간"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vdw_cs_tv_startDate"
                android:layout_width="0px"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16dp"
                android:text="시작 일자"
                android:background="@drawable/white_rounded_background"/>

            <TextView
                android:id="@+id/vdw_cs_tv_endDate"
                android:layout_width="0px"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16dp"
                android:text="종료 일자"
                android:background="@drawable/white_rounded_background"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="2. 모집 기간"
                    android:textColor="#5A5A5A"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vdw_cs_tv_dueDate"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="등록 마감일"
                    android:background="@drawable/white_rounded_background"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="3. 참가비"
                    android:textColor="#5A5A5A"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vdw_cs_et_fee"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="0"
                    android:background="@drawable/white_rounded_background"/>

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="4. 장소"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vdw_cs_et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@drawable/white_rounded_background"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="5. 세부 내용"
                android:textColor="#5A5A5A"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vdw_cs_tv_bookInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:text="도서 정보 보기"
                android:textColor="@color/mainColor"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/vdw_cs_tv_wagleDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:background="@drawable/white_rounded_background" />


        <TextView
            android:id="@+id/vdw_cs_tv_num6name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="6. 동의 사항 및 환불 규정"
            android:textColor="#5A5A5A"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vdw_cs_et_wagleAgreeRefund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:background="@drawable/white_rounded_background" />

        <CheckBox
            android:id="@+id/vdw_cs_cb_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위의 내용에 동의합니다."
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/mainColor"
            android:visibility="gone"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/vdw_cs_tv_joinIn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="신청하기"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp" />

    </LinearLayout>


</ScrollView>