<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mywagle_readbjm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발제문 보기" />

            <TextView
                android:id="@+id/mywagle_btn_bookreportAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="240dp"
                android:text="독후감 등록" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <RelativeLayout
                    android:id="@+id/mywagle_rl_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <ProgressBar
                android:id="@+id/mywagle_pb_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="200"
                android:progress="0"
                android:secondaryProgress="0"
                style="?android:attr/progressBarStyleHorizontal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/mywagle_et_wpReadPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="현재까지 읽은 페이지 수"
                    android:inputType="numberDecimal"
                    />

                <Button
                    android:id="@+id/mywagle_btn_move"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이동"
                    />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/mywagle_btn_suggestionAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="발제문 등록" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/mywagle_lv_bookreport"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="갤러리"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mywagle_btn_galleryAdd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_add_circle_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mywagle_iv_gallery1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/jhj_wagle_image_loundary" />

            <ImageView
                android:id="@+id/mywagle_iv_gallery2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/jhj_wagle_image_loundary" />

            <ImageView
                android:id="@+id/mywagle_iv_gallery3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/jhj_wagle_image_loundary" />

        </LinearLayout>

        <TextView
            android:id="@+id/mywagle_tv_galleryPlus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="더보기"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비용정산" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/mywagle_btn_paymentAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정산하기"
                    android:layout_gravity="center"
                    />

                <include layout="@layout/activity_payment"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>