<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발제문 보기"
            />

        <Button
            android:id="@+id/mywagle_btn_bookreportAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="독후감 등록"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ProgressBar
            android:id="@+id/mywagle_pb_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/mywagle_btn_suggestionAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발제문 등록"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ListView
            android:id="@+id/mywagle_lv_bookreport"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="갤러리"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mywagle_btn_galleryAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_add_circle_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mywagle_iv_gallery1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/jhj_wagle_image_loundary" />

        <ImageView
            android:id="@+id/mywagle_iv_gallery2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/jhj_wagle_image_loundary" />

        <ImageView
            android:id="@+id/mywagle_iv_gallery3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/jhj_wagle_image_loundary" />

    </LinearLayout>

    <TextView
        android:id="@+id/mywagle_tv_galleryPlus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="더보기"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비용정산"
            />

        <Button
            android:id="@+id/mywagle_btn_paymentAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정산하기"
            />

    </LinearLayout>

</LinearLayout>

</ScrollView>